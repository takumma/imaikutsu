{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es6",
    "jsx": "preserve",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "components/**/*",
    "functions/src/**/*",
    "pages/**/*",
    "utils/**/*",
    "types.ts",
    "index.d.ts"
  ],
  "exclude": [
    "node_modules",
    "functions",
    "next.config.js",
    "prettierrc.config.js"
  ]
}
